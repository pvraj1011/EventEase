<div class="event-card">
    <h3>@Title</h3>
    <p>@Description</p>
    <p>Date: @Date</p>
    <input @bind="Attendees" />
</div>

@code {
    [Parameter] public string Title { get; set; }
    [Parameter] public string Description { get; set; }
    [Parameter] public string Date { get; set; }
    [Parameter] public int Attendees { get; set; }
}
